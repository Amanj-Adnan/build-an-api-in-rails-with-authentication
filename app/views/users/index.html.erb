<div>
  <% if @user.errors.full_messages.any? %>
    <% @user.errors.full_messages.each do |error_message| %>
      <div style="color: green;">
        <%= error_message if @user.errors.full_messages.first == error_message %> <br />
      </div>
    <% end %>
  <% end %>
  <% @users.each do |user| %>
    <div style="margin-left: 4px; margin-top: 4px "><%= user.name %></div>
    <div  style="margin-left: 6px; margin-top: 1px; color: cornflowerblue "> <%= link_to 'edit' , user_edit_path(user_id:user.id ) %></div>
  <%end %>
</div>